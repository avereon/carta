<?xml version="1.0" encoding="UTF-8"?>

<pages version="1.0">

	<page id="layer">
		<group id="layer-title">
			<setting key="name" editor="textline"/>
			<setting key="layer" editor="combobox" provider="design-layer-layers"/>

			<!-- Geometry settings -->
			<setting key="draw-paint" editor="paint-cartesia">
				<option key="none"/>
				<option key="solid"/>
			</setting>
			<setting key="draw-width" editor="textline" type="math-expression"/>
			<setting key="draw-pattern" editor="textline"/>
			<setting key="draw-cap" editor="combobox">
				<option key="square"/>
				<option key="round"/>
				<option key="butt"/>
			</setting>
			<setting key="fill-paint" editor="paint-cartesia">
				<option key="none"/>
				<option key="solid"/>
				<option key="linear"/>
				<option key="radial"/>
			</setting>
		</group>

		<!-- Text settings -->
		<group id="text-title">
			<setting key="text-size" type="math-expression"/>
			<setting key="text-fill-paint" editor="paint-cartesia">
				<option key="none"/>
				<option key="solid"/>
				<option key="linear"/>
				<option key="radial"/>
			</setting>
			<setting key="text-draw-paint" editor="paint-cartesia">
				<option key="none"/>
				<option key="solid"/>
				<option key="linear"/>
				<option key="radial"/>
			</setting>
			<setting key="text-draw-width" editor="textline" type="math-expression"/>
			<setting key="text-draw-pattern" editor="textline"/>
			<setting key="text-draw-cap" editor="combobox">
				<option key="square"/>
				<option key="round"/>
				<option key="butt"/>
			</setting>
		</group>

		<!-- Font settings -->
		<group id="text-font" collapsible="true" expanded="false">
			<setting key="font-name" editor="combobox" provider="font-family-provider"/>
			<setting key="font-weight" editor="combobox">
				<option key="normal"/>
				<option key="bold"/>
			</setting>
			<setting key="font-posture" editor="combobox">
				<option key="regular"/>
				<option key="italic"/>
			</setting>
			<setting key="font-underline" editor="checkbox"/>
			<setting key="font-strikethrough" editor="checkbox"/>
		</group>
	</page>

</pages>
