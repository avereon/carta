<?xml version="1.0" encoding="UTF-8"?>

<pages version="1.0">

	<page id="text">
		<group id="text-title">
			<setting id="layer" key="layer" editor="combobox" provider="design-shape-layers"/>

			<setting id="text-font" key="text-font-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="text-font-custom" key="font" editor="font">
				<dependency key="text-font-mode" value="custom"/>
			</setting>

			<setting id="draw-paint" key="draw-paint-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="draw-paint-custom" key="draw-paint" editor="paint">
				<dependency key="draw-paint-mode" value="custom"/>
			</setting>

			<setting id="draw-width" key="draw-width-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="draw-width-custom" key="draw-width" type="math-expression" editor="textline">
				<dependency key="draw-width-mode" value="custom"/>
			</setting>

			<setting id="draw-pattern" key="draw-pattern-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="draw-pattern-custom" key="draw-pattern" type="csv" editor="textline">
				<dependency key="draw-pattern-mode" value="custom"/>
			</setting>

			<setting id="fill-paint" key="fill-paint-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
				<option key="none"/>
			</setting>
			<setting id="fill-paint-custom" key="fill-paint" editor="paint">
				<dependency key="fill-paint-mode" value="custom"/>
			</setting>
		</group>
	</page>

</pages>
