<?xml version="1.0" encoding="UTF-8"?>

<pages version="1.0">

	<page id="line">
		<group id="line-title">
			<setting id="layer" key="layer" editor="combobox" provider="design-shape-layers"/>

			<setting id="draw-paint" key="draw-paint-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="draw-paint-custom" key="draw-paint" editor="paint-cartesia">
				<dependency key="draw-paint-mode" value="custom"/>
			</setting>

			<setting id="draw-width" key="draw-width-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="draw-width-custom" key="draw-width" type="math-expression" editor="textline">
				<dependency key="draw-width-mode" value="custom"/>
			</setting>

			<setting id="draw-pattern" key="draw-pattern-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="draw-pattern-custom" key="draw-pattern" type="csv" editor="textline">
				<dependency key="draw-pattern-mode" value="custom"/>
			</setting>

			<setting id="draw-cap" key="draw-cap-mode" editor="combobox">
				<option key="layer"/>
				<option key="custom"/>
			</setting>
			<setting id="draw-cap-custom" key="draw-cap" editor="combobox">
				<dependency key="draw-cap-mode" value="custom"/>
				<option key="square"/>
				<option key="round"/>
				<option key="butt"/>
			</setting>

		</group>
	</page>

</pages>
